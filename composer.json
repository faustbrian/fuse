{
  "name": "cline/fuse",
  "description": "Laravel circuit breaker package with highly configurable fault tolerance",
  "license": "MIT",
  "keywords": [
    "php",
    "laravel",
    "circuit-breaker",
    "fault-tolerance",
    "resilience",
    "microservices"
  ],
  "authors": [
    {
      "name": "Brian Faust",
      "email": "brian@cline.sh"
    }
  ],
  "require": {
    "php": "^8.5.0",
    "illuminate/cache": "^10.0||^11.0||^12.0",
    "illuminate/config": "^10.0||^11.0||^12.0",
    "illuminate/contracts": "^10.0||^11.0||^12.0",
    "illuminate/database": "^10.0||^11.0||^12.0",
    "illuminate/events": "^10.0||^11.0||^12.0",
    "illuminate/support": "^10.0||^11.0||^12.0",
    "spatie/laravel-package-tools": "^1.92.7",
    "cline/variable-keys": "^1.1"
  },
  "require-dev": {
    "cline/coding-standard": "^1.6.2",
    "ergebnis/composer-normalize": "^2.48.2",
    "orchestra/testbench": "^8.0|^9.0|^10.0",
    "pestphp/pest": "^4.1.6",
    "pestphp/pest-plugin-laravel": "^4.0",
    "pestphp/pest-plugin-type-coverage": "^4.0.3",
    "symfony/var-dumper": "^6.0|^7.0"
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "autoload": {
    "psr-4": {
      "Cline\\Fuse\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "ergebnis/composer-normalize": true,
      "pestphp/pest-plugin": true
    }
  },
  "extra": {
    "laravel": {
      "aliases": {
        "Fuse": "Cline\\Fuse\\Facades\\Fuse"
      },
      "providers": [
        "Cline\\Fuse\\FuseServiceProvider"
      ]
    }
  },
  "scripts": {
    "lint": "ecs check --fix",
    "refactor": "rector",
    "test": [
      "@test:lint",
      "@test:type-coverage",
      "@test:unit",
      "@test:types",
      "@test:refactor"
    ],
    "test:lint": "ecs check",
    "test:refactor": "rector --dry-run",
    "test:type-coverage": "pest --parallel --min=90 --type-coverage",
    "test:types": "phpstan",
    "test:unit": "pest --parallel --min=90 --coverage"
  }
}
